<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<AnchorPane id="AnchorPane" prefHeight="503.0" prefWidth="854.0" style="-fx-background-color: #fff;"
            xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.LoginController">
    <children>
        <AnchorPane prefHeight="503.0" prefWidth="382.0" style="-fx-background-color: #0C39FF;"
                    AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <ImageView fitHeight="52.0" fitWidth="52.0" layoutX="166.0" layoutY="139.0" pickOnBounds="true"
                           preserveRatio="true">
                    <image>
                        <Image url="@../images/icons8_Google_Wallet_50px.png"/>
                    </image>
                </ImageView>
                <Label alignment="CENTER" layoutX="105.0" layoutY="222.0" prefHeight="23.0" prefWidth="173.0"
                       text="የምርጫ ውጤት ማስያ እና " textFill="WHITE">
                    <font>
                        <Font name="Nyala" size="18.0"/>
                    </font>
                </Label>
                <Label alignment="CENTER" layoutX="89.0" layoutY="255.0" prefHeight="23.0" prefWidth="205.0"
                       text="ሪፖርት ስርዓት መተግበሪያ" textFill="WHITE">
                    <font>
                        <Font name="Nyala" size="17.0"/>
                    </font>
                </Label>
            </children>
        </AnchorPane>
        <Pane layoutX="488.0" layoutY="100.0" AnchorPane.bottomAnchor="73.0" AnchorPane.topAnchor="100.0">
            <children>
                <TextField fx:id="txtUsername" layoutX="7.0" layoutY="41.0" prefHeight="34.0" prefWidth="275.0"
                           promptText="ስም">
                    <font>
                        <Font name="Nyala"/>
                    </font>
                </TextField>
                <PasswordField fx:id="txtPassword" layoutX="7.0" layoutY="105.0" prefHeight="34.0" prefWidth="275.0"
                               promptText="ሚስጥር ቁልፍ" stylesheets="@../styling/fullpackstyling.css">
                    <font>
                        <Font name="Nyala"/>
                    </font>
                </PasswordField>
                <Button fx:id="btnSignin" layoutX="70.0" layoutY="175.0" mnemonicParsing="false"
                        onMouseClicked="#handleButtonAction" prefHeight="34.0" prefWidth="137.0"
                        stylesheets="@../styling/fullpackstyling.css" text="ግባ">
                    <font>
                        <Font name="Nyala" size="12.0"/>
                    </font>
                </Button>

                <Label fx:id="lblErrors" alignment="CENTER" layoutX="8.0" layoutY="143.0" prefHeight="23.0"
                       prefWidth="275.0" textFill="#ff6354">
                    <font>
                        <Font name="Segoe UI" size="10.0"/>
                    </font>
                </Label>
            </children>
        </Pane>
        <ImageView fitHeight="43.0" fitWidth="45.0" layoutX="394.0" layoutY="14.0" pickOnBounds="true"
                   preserveRatio="true">
            <image>
                <Image url="@../images/icons8_XING_100px.png"/>
            </image>
        </ImageView>
    </children>
</AnchorPane>
